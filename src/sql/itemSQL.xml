<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>


<sqlMap namespace="item">
	<typeAlias alias="idto" type="jackpot.DTO.ItemDTO"/>
	<typeAlias alias="icdto" type="jackpot.DTO.ItemCateDTO"/>
	
	<!-- 재고 관련 -->
	<insert id="itemInsert" parameterClass="idto">
		insert into item values(
			item_seq.NEXTVAL, #pro_code#, #barcode#, #pro_name#, #item_division#,
			#sale_cost#, #buy_cost#, #retail_cost#, #tax#, #stand#, #unit#, #use#,
			#buy_code#, #buy_name#, #big_cate#, #middle_cate#, #small_cate#, #note#
		)
	</insert>
	
	<select id="itemListCount" resultClass="int">
		select count(*) from item
	</select>
	
	<select id="itemList" resultClass="idto">
		select * from item
	</select>
	
	<!-- 카테고리 관련 -->
	<!-- 대분류 -->
	<insert id="bigCateInsert" parameterClass="icdto">
		insert into big_cate values(
			big_cate_seq.NEXTVAL, #big_cate#, #big_use#, #big_name#
		)
	</insert>
	
	<select id="bigItemList" resultClass="icdto">
		select * from big_cate
	</select> 
	
	<select id="bigItemListCount" resultClass="int">
		select count(*) from big_cate
	</select>
	
	<!-- 중분류 -->
	<select id="middleItemList" resultClass="icdto">
		select * from middle_cate
	</select>
	
	<select id="middleItemListCount" resultClass="int">
		select count(*) from middle_cate
	</select>

</sqlMap>

